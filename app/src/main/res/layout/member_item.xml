<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cardView" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

    <TextView
        android:id="@+id/idNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="28dp"

        />

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_toRightOf="@+id/idNameTextView"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_toRightOf="@+id/idNameTextView"
        android:layout_below="@+id/firstNameTextView"
        />

    <TextView
        android:id="@+id/genderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_toRightOf="@+id/idNameTextView"
        android:layout_below="@+id/lastNameTextView"
        />


    <TextView
        android:id="@+id/sportNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:layout_toRightOf="@+id/idNameTextView"
        android:layout_below="@+id/genderNameTextView"
        />

    </RelativeLayout>


</androidx.cardview.widget.CardView>


</LinearLayout>